\draw[](0,0)node[above]{$A$}--++(\ang-180:\len)node[below right]{$C$}node[pos=0.3,above right]{$\abs{\kvec{F}}=20$};
\draw([shift={(270:0.3)}]0,0) arc (270:330:0.3)node[pos=0.6,below]{$\tfrac{\pi}{3}$};
