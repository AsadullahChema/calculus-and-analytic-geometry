\draw[-latex](0,0)--++(\aa,\bb)node[above]{$C$}node[pos=0.5,left]{$\kvec{v}_2$}coordinate(kC);
\draw[-latex](kC)--(kB)node[pos=0.6,above,yshift={1ex}]{$\kvec{v}_1-\kvec{v}_2$};
\end{tikzpicture}
