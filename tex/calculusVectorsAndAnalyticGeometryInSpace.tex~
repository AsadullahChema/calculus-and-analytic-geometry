\draw[opacity=0.5,fill=gray](\a,\b,0)--++(-\a,0,0)--++(0,0,\c)--++(\a,0,0)--++(0,0,-\c);
\draw[opacity=0.5,fill=gray](\a,0,\c)--++(0,\b,0)--++(-\a,0,0)--++(0,-\b,0)--++(\a,0,0);
\draw(\a,0,0)node[left]{$(x,0,0)$};
\draw(0,\b,0)node[above right]{$(0,y,0)$};
\draw(0,0,\c)node[left]{$(0,0,z)$};
