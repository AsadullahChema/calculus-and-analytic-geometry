\draw[stealth-](kkB)--++(0,-0.2);
\draw[stealth-](kkT)--++(0,0.2)--++(0.1,0)node[right]{$\dif y$};
\draw(\k,{f(\k+\t)})++(0,0.1)--++(0,0.2)coordinate[pos=0.5](kkC);
\draw[stealth-stealth](kkC)--($(1,0)!(kkC)!(1,2)$)coordinate[pos=0.2](kL);
