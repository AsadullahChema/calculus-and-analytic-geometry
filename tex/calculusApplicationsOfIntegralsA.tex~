\draw[stealth-stealth](kb)--($(0,0)!(kb)!(2,0)$)node[pos=0.5,sloped,below]{$4-x^2$};
\draw(\k-\t,-0.5)--(\k-\t,-0.9);
\draw(\k+\t,-0.5)--(\k+\t,-0.9);
\draw[stealth-](\k-\t,-0.7)--(\k-\t-0.2,-0.7);
\draw[stealth-](\k+\t,-0.7)--(\k+\t+0.2,-0.7)node[right]{$\dif x$};
