\draw[-latex](0,-0.2)--(0,2.25)node[above]{$y\,(\si{\centi\meter})$};
\draw[fill=lgray](0,0)--(1,2)node[pos=0.75,above left]{$y=2x$}--(1,0)node[pos=0.5,right]{$x=1$}node[below]{$1$}--(0,0);
\draw(0.5,0)node[below]{$y=0$} (0,2)node[left]{$2$}--++(0.1,0);
\end{tikzpicture}
\caption{تکونی چادر۔}
\end{subfigure}\hfill
