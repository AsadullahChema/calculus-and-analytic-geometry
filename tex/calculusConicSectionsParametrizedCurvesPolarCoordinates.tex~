\addplot[thick,domain=-2:-2+0.2]{-f(x)};
\addplot[thick,domain=-2+0.2:2-0.2]{-f(x)};
\addplot[thick,domain=2-0.2:2]{-f(x)};
\addplot[]plot coordinates{(-\c,0)}node[circ]{}node[below]{$F_1$};
