\begin{scope}[xshift={-4cm},yshift={1cm}]
\draw[-latex](-2,0)--(1.5,0)node[right]{$x$};
\draw[-latex](0,-1.5)--(0,1)node[above]{$y$};
\draw[-latex](0,0)--++(-135:2);
\draw[-stealth]([shift={(0:0.8)}]0,0) arc (0:-135:0.8);
