\draw(0,0)--++(50:3)coordinate[pos=0.6](kbb)coordinate(kb)node[pos=0.9,left]{$\theta=\beta$};
\draw[thick](ka) to [out=60,in=-20] node[pos=0.5,right]{$r_2$}(kb);
\draw[thick](kaa) to [out=110,in=-60] node[pos=0.5,below left]{$r_1$}(kbb);
